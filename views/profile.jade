extends layout
block content
    div(class="row")
        div(class="col-sm-12")
            div(class="well")
                h3
                    span(class="fa fa-user")
                    text    Profil
            div(class="well")
                form(method='post')
                    h3 Change password
                    .form-group
                        label(for='field_password').sr-only New Password
                        input(type='password', name='password', id='field_password', placeholder='New Password', tabindex=1).form-control
                    .form-group
                        label(for='field_password_confirm').sr-only Confirm Password
                        input(type='password', name='password_confirm', id='field_password_confirm', placeholder='Confirm Password', tabindex=2).form-control
                    .forum-group
                        input(type='submit',name='submit',value='Submit').btn.btn-primary
